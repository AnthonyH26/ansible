---
- name: install core packages for virtual machines
  hosts: all
  become: yes
  tasks:
  - name: install packages
    apt:
      upgrade: yes
      update_cache: yes
      name:
        - curl
        - unzip
        - nfs-common

  - name: Ensure guest qemu-guest-agent is started
    service:
      name: qemu-guest-agent
      state: started
      enabled: yes
